{
  "compilerOptions": {
    "module": "commonjs",
    "rootDir": "src",
    "sourceMap": true,
    "moduleResolution": "node",
    "target": "es6",
    "lib": ["es2015", "es2016", "es2018.promise"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "esModuleInterop": true,
    "outDir": "./lib"
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
